extends layout

block content
    div(class='ind-movie-container')
        div(class='movie')
            img(src=`${movie.image}` class='movie-img')
            h3 Review:
            h3
                a(href=`/movies/${movie.id}`)= `${movie.title}`
            form(action=`/reviews/${movie.id}` method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
            div(class='my-rating')
                label= 'My rating:'
                select(required name='rating')='1-5'
                    option(value=1) 1
                    option(value=2) 2
                    option(value=3) 3
                    option(value=4) 4
                    option(value=5) 5
            div(class='thoughts')
                label(for='review')= 'What are your thoughts?'
            div(class='textArea')
                textarea(cols='40' rows='5' name='comment' placeholder='Enter your review (optional)')
                button(type='submit')= 'Post'
