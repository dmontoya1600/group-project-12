extends layout

block content
    h3= title
    a(href=`/movies/${movie.id}`)= `${movie.title}`
    form(action=`/reviews/${movie.id}` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        label= 'My rating:'
        select(required name='rating')='1-5'
            option(value=1) 1
            option(value=2) 2
            option(value=3) 3
            option(value=4) 4
            option(value=5) 5
        label(for='review')= 'What are your thoughts?'
        textarea(cols='10' rows='12' name='comment' required)
        button(type='submit')= 'Post'
