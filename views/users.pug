
extends layout


block content
    div(class="page")
        div(class='gallery')
                h2 Favorites
                div(class= 'collection ')
                    if userFavorites
                    each favorites in userFavorites
                        div(class='user-movie')
                            a(href=`/movies/${favorites.movieId}` class="movie-title")
                                img(src=`${favorites.image}` class=`image-class ${favorites.movieId}`)
